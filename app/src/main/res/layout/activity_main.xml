<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="25sp"
    android:layout_marginTop="15sp"
    android:layout_marginRight="25sp"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtjudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:paddingBottom="20dp"
            android:text="Aplikasi Hitung"
            android:textColor="#050505"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnHitungS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130sp"
            android:text="Menhitung Suhu" />

        <Button
            android:id="@+id/btnbelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Belanja" />

        <Button
            android:id="@+id/btnbagunan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="menhitung bangun ruang" />

        <Button
            android:id="@+id/btnbilangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Bilangan ganjil Atau genap" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>